<script>
function showTab(type) {
    // Update active tab
    document.querySelectorAll('.tab-button').forEach(button => {
        button.classList.remove('text-cyan-500', 'border-cyan-500');
        button.classList.add('text-gray-500', 'dark:text-gray-400', 'border-transparent');
    });
    
    event.target.classList.add('text-cyan-500', 'border-cyan-500');
    event.target.classList.remove('text-gray-500', 'dark:text-gray-400', 'border-transparent');

    // Show/hide skills
    document.querySelectorAll('.skill-row').forEach(row => {
        if (type === 'all' || row.dataset.type === type) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
}

// Initialize with all skills shown
document.addEventListener('DOMContentLoaded', function() {
    showTab('all');
});
</script>
